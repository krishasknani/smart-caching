{
	"manifest_version": 3,
	"name": "Smart Caching Extension",
	"version": "1.0.0",
	"description": "Cache web pages for offline viewing",
	"permissions": [
		"storage",
		"tabs",
		"activeTab",
		"scripting",
		"history",
		"offscreen"
	],
	"host_permissions": [
		"https://api.brightdata.com/*",
		"https://*/",
		"http://*/"
	],

	"action": {
		"default_popup": "popup.html",
		"default_title": "Smart Caching",
		"default_icon": {
			"16": "icons/icon16.png",
			"48": "icons/icon48.png",
			"128": "icons/icon128.png"
		}
	},
	"background": {
		"service_worker": "background.js"
	},
	"web_accessible_resources": [
		{
			"resources": ["config.js"],
			"matches": ["<all_urls>"]
		}
	],
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["content.js"]
		}
	]
}
